<mvc:View controllerName="UI5_uploader.controller.Index"
	xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" class="viewPadding">

<Page title="{i18n>homePageTitle}">
		<headerContent>
			<Button
					icon="sap-icon://hello-world"
					press="onGotoLoad"/>
		</headerContent>
		<content>
			<ScrollContainer 
				id="contentId"
				width="100%"
				height="calc(100% - 3rem)"
				horizontal="false"
				vertical="false">
				<SplitApp id="splitApp"
						  mode="ShowHideMode"
						  defaultTransitionNameDetail="show"
						  defaultTransitionNameMaster="fade">
				</SplitApp>
			</ScrollContainer>
		</content>
		
</Page>



</mvc:View>