<mvc:View 
	controllerName="TopicMaster" 
	xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page
    	id="page"
    	enableScrolling="true"
    	showFooter="false"
    	navButtonPress="onNavBack"
    	showNavButton="false">
    	<customHeader>
    		<Toobar width="100%">
    			<SearchField id="searchField" placeholder="Filter" liveChange="onTreeFilter"/>
    			<Button icon="sap-icon://expand-group/" press="onTreeExpandAll"/>
    			<Button icon="sap-icon://collapse-group/" press="onTreeCollapseAll"/>

    		</Toobar>
    	</customHeader>

    	<content>
    		<Tree
    			id="tree"
    			mode="SingleSelectMaster"
    			selectionChange="onNodeSelect"
    			items="{path:'/'}">
    			<StandardTreeItem
    				title="{text}"
    				selected="{isSelected}">
    				<customData>
    					<core:CustomData key="nodeId" value="{key}"/>
    				</customData>		
    			</StandardTreeItem>
    			
    		</Tree>
    	</content>
    	
    </Page>
	
</mvc:View>